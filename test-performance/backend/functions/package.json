{
  "name": "test-performance-functions",
  "version": "1.0.0",
  "description": "Cloud Functions pour test-performance",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
