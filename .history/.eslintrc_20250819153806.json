{
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "error",
    "prefer-const": "error",
    "prefer-arrow-callback": "error",
    "no-var": "error",
    "no-console": "warn"
  },
  "ignorePatterns": ["dist/", "node_modules/", "output/", "test-output/"]
}
