# Configuration Firebase
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN={{firebase.projectId}}.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID={{firebase.projectId}}
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET={{firebase.projectId}}.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Configuration des environnements
NEXT_PUBLIC_ENVIRONMENT={{#if firebase.environments}}{{firebase.environments.0.name}}{{else}}dev{{/if}}

# Configuration des fonctionnalités
{{#if nextjs.features.analytics}}
NEXT_PUBLIC_FIREBASE_ANALYTICS_ENABLED=true
{{/if}}

{{#if nextjs.features.performance}}
NEXT_PUBLIC_FIREBASE_PERFORMANCE_ENABLED=true
{{/if}}

{{#if nextjs.features.sentry}}
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
{{/if}}

# Configuration PWA
{{#if nextjs.features.pwa}}
NEXT_PUBLIC_PWA_ENABLED=true
{{/if}}

# Configuration FCM
{{#if nextjs.features.fcm}}
NEXT_PUBLIC_FCM_SENDER_ID=123456789
{{/if}}

# Variables d'environnement personnalisées
NEXT_PUBLIC_APP_NAME={{project.name}}
NEXT_PUBLIC_APP_VERSION={{project.version}} 